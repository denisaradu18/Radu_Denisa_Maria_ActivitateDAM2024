<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_adauga_carte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Adauga_carte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.159" />

    <Button
        android:id="@+id/btn_lista_carti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Lista carti"
        app:layout_constraintEnd_toEndOf="@+id/btn_adauga_carte"
        app:layout_constraintTop_toBottomOf="@+id/btn_adauga_carte" />

    <Button
        android:id="@+id/button_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="25dp"
        android:text="API"
        app:layout_constraintStart_toStartOf="@+id/btn_lista_carti"
        app:layout_constraintTop_toBottomOf="@+id/btn_lista_carti" />
</androidx.constraintlayout.widget.ConstraintLayout>